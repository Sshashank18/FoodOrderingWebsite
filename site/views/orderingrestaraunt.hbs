<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>

    <!-- LINKING BOOTSTRAP -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="/JSfiles/infores.js"></script>

    <link rel="stylesheet" href="/CSS/inforestaraunt.css">
</head>
<body>
    <div id="strip">

    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="item col-8">
                {{#each selectedRes as |res|}}
                    <div>
                        <img src>
                        <h2>{{res.Name}}</h2><br>
                        <h6>{{res.FoodType}}</h6><br>
                        {{res.Rating}}
                    </div>
                    <div class="menu">
                        <h3>Menu</h3>
                        {{#if res.Menu.Breakfast}}
                            <h2>BREAKFAST</h2>
                            <table class="table">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">Item Name</th>
                                            <th scope="col">Price</th>
                                        </tr>
                                    </thead>
                            {{#each res.Menu.Breakfast as |menu|}}
                                    <tbody>
                                        <tr>
                                            <td>{{menu.name}}</td>
                                            <td>₹{{menu.price}} &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<button class="btn btn-success add" data-name="{{menu.name}}" data-price={{menu.price}}>Add</button></td>
                                        </tr>                                       
                                    </tbody>
                            {{/each}}
                            </table>
                        {{/if}}
                        {{#if res.Menu.MainCourse}}
                            <h2>MAIN COURSE</h2>
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">Item Name</th>
                                        <th scope="col">Price</th>
                                    </tr>
                                </thead>
                            {{#each res.Menu.MainCourse as |menu|}}
                        
                                    <tbody>
                                        <tr>
                                            <td>{{menu.name}}</td>
                                            <td>₹{{menu.price}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <button class="btn btn-success add" data-name="{{menu.name}}" data-price={{menu.price}}>Add</button></td>
                                        </tr>                                       
                                    </tbody>
                            {{/each}}
                            </table> 
                        {{/if}}
                        {{#if res.Menu.Rice}}
                            <h2>RICE</h2>
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">Item Name</th>
                                        <th scope="col">Price</th>
                                    </tr>
                                </thead>
                            {{#each res.Menu.Rice as |menu|}}
                                    <tbody>
                                        <tr>
                                            <td>{{menu.name}}</td>
                                            <td>₹{{menu.price}}&nbsp;&nbsp;&nbsp;&nbsp; <button class="btn btn-success add" data-name="{{menu.name}}" data-price={{menu.price}}>Add</button></td>
                                        </tr>                                       
                                    </tbody>
                            {{/each}}
                            </table>
                        {{/if}}
                        {{#if res.Menu.Breads}}
                            <h2>BREADS</h2>
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">Item Name</th>
                                        <th scope="col">Price</th>
                                    </tr>
                                </thead>
                            {{#each res.Menu.Breads as |menu|}}
                                <tbody>
                                        <tr>
                                            <td>{{menu.name}}</td>
                                            <td>₹{{menu.price}}&nbsp;&nbsp;&nbsp;&nbsp; <button class="btn btn-success add" data-name="{{menu.name}}" data-price={{menu.price}}>Add</button></td>
                                        </tr>                                       
                                    </tbody>
                            {{/each}}
                            </table>
                        {{/if}}
                        {{#if res.Menu.Desserts}}
                           <h2>DESSERTS</h2>
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">Item Name</th>
                                        <th scope="col">Price</th>
                                    </tr>
                                </thead>
                            {{#each res.Menu.Desserts as |menu|}}
                                    <tbody>
                                        <tr>
                                            <td>{{menu.name}}</td>
                                            <td>₹{{menu.price}}&nbsp;&nbsp;&nbsp;&nbsp; <button class="btn btn-success add"  data-name="{{menu.name}}" data-price={{menu.price}}>Add</button></td>
                                        </tr>                                       
                                    </tbody>
                            {{/each}}
                            </table>
                        {{/if}}
                        {{#if res.Menu.Beverages}}
                            <h2>BEVERAGES</h2>
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">Item Name</th>
                                        <th scope="col">Price</th>
                                    </tr>
                                </thead>
                            {{#each res.Menu.Beverages as |menu|}}
                                 <tbody>
                                        <tr>
                                            <td>{{menu.name}}</td>
                                            <td>₹{{menu.price}}&nbsp;&nbsp;&nbsp;&nbsp; <button class="btn btn-success add" data-name="{{menu.name}}" data-price={{menu.price}}>Add</button></td>
                                        </tr>                                       
                                    </tbody>
                            {{/each}}
                            </table>
                        {{/if}}
                    </div>
                {{/each}}
            </div>
            <div class="item col-4">
                <div id="order">
                    <h4>Your Orders</h4>

                </div>
                <div id="pricing">
                    <div id="subtotal">
                        Subtotal:
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
